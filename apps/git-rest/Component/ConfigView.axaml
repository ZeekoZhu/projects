<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GitRest.Component.ConfigView">
  <StackPanel>
    <Grid ColumnDefinitions="Auto,*" Margin="0 0 0 8">
      <TextBlock Margin="0 0 8 0">Git Activity Monitor</TextBlock>
      <Border
        Height="1"
        Grid.Column="1" BorderThickness="0.5" BorderBrush="Silver" />
    </Grid>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <Button x:Name="EditIgnoreProjectsBtn" Content="Edit Ignore Projects" Click="EditIgnoreProjectsBtn_OnClick" />
      <TextBlock VerticalAlignment="Center">*Please restart the program after changes are saved</TextBlock>
    </StackPanel>
  </StackPanel>
</UserControl>
